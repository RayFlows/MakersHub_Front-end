<!--值班申请页面 WXML 文件-->
<view class="container">
  <!-- 顶部标题 -->
  <view class="header">
    <text class="title">值班申请</text>
  </view>

  <!-- 表单容器 -->
  <view class="form-container">
    
    <!-- 选择时段1 -->
    <view class="time-section">
      <text class="section-title">选择时段1</text>
      <view class="picker-row">
        <picker class="picker-item" mode="selector" range="{{weekArray}}" value="{{timeSlot1.weekIndex}}" bindchange="onWeekChange1">
          <view class="picker-content">
            <text class="picker-text">{{weekArray[timeSlot1.weekIndex]}}</text>
            <text class="picker-arrow">▼</text>
          </view>
        </picker>
        <picker class="picker-item" mode="selector" range="{{timeArray}}" value="{{timeSlot1.timeIndex}}" bindchange="onTimeChange1">
          <view class="picker-content">
            <text class="picker-text">{{timeArray[timeSlot1.timeIndex]}}</text>
            <text class="picker-arrow">▼</text>
          </view>
        </picker>
      </view>
    </view>

    <!-- 选择时段2 -->
    <view class="time-section">
      <text class="section-title">选择时段2</text>
      <view class="picker-row">
        <picker class="picker-item" mode="selector" range="{{weekArray}}" value="{{timeSlot2.weekIndex}}" bindchange="onWeekChange2">
          <view class="picker-content">
            <text class="picker-text">{{weekArray[timeSlot2.weekIndex]}}</text>
            <text class="picker-arrow">▼</text>
          </view>
        </picker>
        <picker class="picker-item" mode="selector" range="{{timeArray}}" value="{{timeSlot2.timeIndex}}" bindchange="onTimeChange2">
          <view class="picker-content">
            <text class="picker-text">{{timeArray[timeSlot2.timeIndex]}}</text>
            <text class="picker-arrow">▼</text>
          </view>
        </picker>
      </view>
    </view>

    <!-- 选择时段3 -->
    <view class="time-section">
      <text class="section-title">选择时段3</text>
      <view class="picker-row">
        <picker class="picker-item" mode="selector" range="{{weekArray}}" value="{{timeSlot3.weekIndex}}" bindchange="onWeekChange3">
          <view class="picker-content">
            <text class="picker-text">{{weekArray[timeSlot3.weekIndex]}}</text>
            <text class="picker-arrow">▼</text>
          </view>
        </picker>
        <picker class="picker-item" mode="selector" range="{{timeArray}}" value="{{timeSlot3.timeIndex}}" bindchange="onTimeChange3">
          <view class="picker-content">
            <text class="picker-text">{{timeArray[timeSlot3.timeIndex]}}</text>
            <text class="picker-arrow">▼</text>
          </view>
        </picker>
      </view>
    </view>

  </view>

  <!-- 提交按钮 -->
  <view class="submit-container">
    <button class="submit-btn" bindtap="onSubmit">提交</button>
  </view>
  <image class="bottom-image" src="/images/object_borrow_list/white_cat.svg" mode="widthFix" />
</view>