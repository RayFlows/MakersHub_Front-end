/* 整体背景，与 site_borrow_permit_list 风格一致 */
page {
  background-color: #222831;
  overflow: hidden;
}

/* 页面根容器 */
.container {
  position: relative;
  overflow-x: hidden;
  padding: 0;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: flex-start;
  height: 100vh;
}

.tab {
  width: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  gap: 140rpx;
  margin-top: -30rpx;
  margin-bottom: 32rpx;
}

/* Tab 文字样式 */
.tab text {
  font-size: 34rpx;   
  color: #FFFFFF;
  padding-bottom: 10rpx;  /* 文字与下划线之间空间 */
}


.active {
  color: #00ADB5 !important;
  padding-bottom: 16rpx;

  border-bottom: 6rpx solid #00ADB5;
}


/* 列表滚动区域 */
.list-scroll {
  flex: 1;
  width: 100%;
}

/* 列表容器（内部布局参考 site_borrow_permit_list） */
.list-container {
  display: flex;
  flex-direction: column;
  overflow-x: hidden;
  flex: 1;
  height: auto;
}

/* 单个项目卡片：扁圆白块 */
.item-container {
  display: flex;
  align-items: center;
  width: 619rpx;
  height: 183rpx;
  /* height:auto; */
  justify-content: space-between;
  background-color: #ffffff;
  color: #393E46;
  border-radius: 35rpx;
  padding: 30rpx 40rpx;
  box-sizing: border-box;
  margin: 0 auto 24rpx;
}

/* 左侧内容区域 */
.item-details {
  height: 100%;
  flex:1;
  padding-right: 20rpx;  /* 给文字留点空间，避免贴到按钮上 */
  display: flex;
  flex-direction: column;
  justify-content: center;
  /* gap: 3rpx; */
}

/* 项目名 */
.name {
  display: block;
  font-size: 36rpx;
  font-weight: 600;
  color: #393E46;
  max-width: 100%;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  text-align: left;
  margin-bottom: 14rpx; /* 控制标题和“申请创建时间”的距离 */
}

/* “申请创建时间：” 标签 */
.label {
  font-size: 24rpx;
  color: #888;
  display: flex;
  line-height: 1;      /* 【核心】消除文字上下的自带留白 */
  margin-bottom: 0rpx; /* 控制它和下面具体时间的距离，数字越小越近 */
}

/* 时间 + 状态 行 */
.time-and-state {
  display: flex;
  flex-direction: row;
  align-items: center;
  gap: 28rpx;
  margin-top: 0;
  line-height: 1;
}

/* 具体时间 */
.create-time {
  font-size: 24rpx;
  color: #333;
  display: inline-block;
  white-space: nowrap;
  line-height: 1; 
  margin-top: -12rpx;
}

/* 状态胶囊基类 */
.state {
  display: inline-block;
  white-space: nowrap;
  font-size: 22rpx;
  padding: 4rpx 12rpx;
  border-radius: 24rpx;
  margin-top:8rpx;
}

/* 待审核：灰色 */
.state-pending {
  background-color: #e5e5e5;
  color: #666666;
}

/* 进行中：黄色 */
.state-running {
  background-color: #f8d27f;
  color: #6a4e00;
}

/* 已打回：红色 */
.state-rejected {
  background-color: #e85874;
  color: #ffffff;
}

/* 右侧详情按钮（整体在卡片竖直居中，靠右侧） */
.detail-btn {
  display: flex;
  width: 150rpx;
  height: 70rpx;
  background: #00BAAD;
  color: #fff;
  border-radius: 35rpx;
  font-size: 28rpx;
  text-align: center;
  justify-content: center;
  align-items: center;
  white-space: nowrap;
  margin-left: 24rpx;
}

.detail-btn:active {
  filter: brightness(0.9);
}

/* 空状态提示 */
.empty-hint {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 75%;
  text-align: center;
  font-size: 28rpx;
  line-height: 40rpx;
  color: #666;
}

/* 底部安全区 */
.safe-bottom {
  height: 100rpx;
}
