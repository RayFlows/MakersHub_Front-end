/* pages/project_create_apply.wxss */

/* 基础容器样式 */
.container {
  background-color: #222831;
  min-height: 100vh;
  padding: 30rpx;
  padding-bottom: 0;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}


.focused{
  /* border-color: #00ADB5; */
  box-shadow: 0 0 5px rgba(0, 107, 255, 0.7);
}

/* 表单容器 */
.form-container {
  background: #00adb5;
  border-radius: 32rpx;
  padding: 40rpx;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.1);
  width: 95%;
  margin-bottom: 30rpx;
}

/* 统一输入框样式 */
.input-field {
  height: 90rpx;
  background: #e5e5e5;
  border-radius: 35rpx;
  font-size: 28rpx;
  padding: 0 28rpx;
  margin-bottom: 30rpx;
  transition: all 0.3s;
  color: #666;
  display: flex;
  align-items: center;
}

input.input-field {
  display: block;  /* 改为 block，移除 flex */
  line-height: 90rpx;  /* 使用 line-height 实现垂直居中 */
  box-sizing: border-box;  /* 确保 padding 不会影响宽度 */
}

.selector-field {
  height: 90rpx;
  padding-top: 25rpx;
  padding-bottom: 25rpx;
  font-size: 28rpx;
  color: #666;
}

.input-field:focus {
  border-color: #222831;
}


/* 标签文本样式 */
.form-label {
  font-size: 30rpx;
  font-weight: 700;
  color: #fff;
  margin-top: 20rpx;
  margin-bottom: 20rpx;
  display: block;
}

.material-details {
  background: #00adb5;
  border-radius: 32rpx;
  padding: 40rpx 0 40rpx 0;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.1);
  width: 95%;
  margin-bottom: 30rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.add {
  display: inline-block;
  flex: none;
  line-height: 30px;
  padding: 0 12px;
  background: #FFE89E;
  border-radius: 24rpx;
  color: #222831;
  font-size: 27rpx;
  font-weight: 700;
  margin-top: 40rpx;
}

.box {
  margin-top: 10px;
  clear: both;
  overflow: hidden;
  padding: 0 15px;
  display: flex;
  align-items: center;
}


.site-title {
  display: flex;
  flex-direction: row;
  gap: 100rpx;
}

.strategy {
  color:#FFE89E;
  text-decoration:  underline;
  font-size: small;
  padding-top: 21rpx;
}

/* 场地选择组布局 */
.site-picker-group {
  display: flex;
  width: 100%;
  align-items: center;
  justify-content: space-between;
}

.site-label {
  color: #fff;
  font-size: 28rpx;
  font-weight: 700;
  flex: 0 0 auto;
  margin-right: 10rpx;
}

.site-picker {
  flex: 1;
  margin-right: 20rpx;
}

.site-picker:last-child {
  margin-right: 0;
}

/* 添加已占用样式 */
.occupied {
  color: #E33C64;
  text-decoration: line-through;
}

/* 修改选择器占位符样式 */
.picker-content.placeholder {
  color: #666;
}

/* 确保文本居中 */
.picker-content text {
  width: 100%;
  text-align: center;
}

.picker-content {
  height: 90rpx;
  background: #e5e5e5;
  border-radius: 35rpx;
  font-size: 28rpx;
  padding: 0 28rpx;
  color: #7D8592;
  display: flex;
  align-items: center;
  justify-content: center;
  text-align: center;
  line-height: normal;
}


/* 选择器组布局 */
.time-picker-group {
  display: grid;
  width: 600rpx;
  grid-template-columns: repeat(3, 1fr);
  gap: 20rpx;
  /* margin: 40rpx 0; */
  color:#666;
  font-weight: 700;
}

.time-picker-group picker {
  margin: 10rpx;
  background: #83D9DE;
  border-radius: 30rpx;
  height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

/* 统一选择器样式 */
.time-picker {
  border-radius: 25rpx;
  height: 70rpx;
  font-size: 28rpx;
  color: #4E5969;
  font-weight: 700;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.3s;
}

/* 特殊定位选择器 */
.year-picker {
  grid-column: span 2;
}

.hour-picker,
.minute-picker {
  grid-column: span 1;
}

.textarea-field {
  height: 200rpx;
  padding: 20rpx 28rpx;
  line-height: 1.5;
  width: 100%;
  box-sizing: border-box; /* 新增 */
  align-items: flex-start;
}

/* 提交按钮样式 */
.submit-btn {
  background: #00adb5;
  color: white;
  border-radius: 45rpx;
  height: 90rpx;
  font-size: 32rpx;
  margin-top: 60rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.15);
  transition: all 0.3s;
  line-height: 60rpx;
  font-weight: 400;
}

.submit-btn:active {
  transform: scale(0.98);
  filter:brightness(0.95);
}


/* 装饰图片样式 */
.decorative-image {
  width: 440rpx;
  height: 174rpx;
  display: block;
  position: relative;
  bottom: 0;
  margin-top: 50rpx;
  z-index: 99;
}

/* 项目成员容器 */
.members-container {
  background: #e5e5e5;
  border-radius: 35rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  min-height: 90rpx;
}

.members-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.member-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.member {
  font-size: 28rpx;
  color: #4E5969;
  flex: 1;
}

.find-icon {
  width: 42rpx;
  height: 42rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.delete-icon {
  width: 32rpx;
  height: 32rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.no-members {
  text-align: center;
  color: #999;
  font-size: 28rpx;
  padding: 20rpx 0;
}

/* 添加成员按钮 */
.add-member-btn {
  background: #E33C64;
  color: white;
  border-radius: 45rpx;
  height: 90rpx;
  font-size: 32rpx;
  transition: all 0.3s;
  line-height: 60rpx;
  font-weight: 400;
}

.add-member-btn:active {
  opacity: 0.8;
}

/* 弹窗遮罩 */
.modal-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.6);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 9999;
}

/* 弹窗内容 */
.modal-content {
  width: 600rpx;
  background: #fff;
  border-radius: 20rpx;
  padding-top: 30rpx;
  position: relative;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: flex-start;
}

.modal-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #00adb5;
  text-align: center;
  display: block;
  margin-bottom: 30rpx;
}

/* 搜索容器 */
.search-container {
  position: relative;
  flex-direction: row;
  display: flex;
  align-items: center;
  justify-content: space-between;
  /* margin-bottom: 20rpx; */
  padding: 0rpx 30rpx 0rpx 30rpx;
  border: 3rpx solid #e5e5e5;   /* 四边 */
  border-left: none;             /* 去掉左右 */
  border-right: none;
  width: 90%;
  color:#808080;
}

.search-input {
  width: 100%;
  height: 80rpx;
  padding: 0 80rpx 0 30rpx;
  font-size: 28rpx;
  box-sizing: border-box;
  
}

.dropdown-results {
  position: absolute;
  top: 180rpx;
  left: 5%;
  max-height: 400rpx;
  background: #fff;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.15);
  overflow-y: auto;
  z-index: 1;
  width: 90%;
  color: #808080;
}

.dropdown-item {
  padding: 25rpx 30rpx;
  border-bottom: 1rpx solid #f0f0f0;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.dropdown-item:last-child {
  border-bottom: none;
}

.dropdown-item.active {
  background: #e8f4f8;
}

.dropdown-item-content {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}



/* 提示信息 */
.modal-hint {
  margin-bottom: 20rpx;
  padding: 15rpx 20rpx;
  background: #fff3e0;
  border-radius: 10rpx;
}

.hint-text {
  font-size: 24rpx;
  color: #f57c00;
  line-height: 1.5;
}

/* 按钮组 */
.modal-buttons {
  display: flex;
  flex-direction: row;
  justify-content: start;
  align-items: center;
  margin-top: 30rpx;
  border-top: 2rpx solid #e5e5e5;
  width: 100%;
}

.modal-btn {
  font-weight: 600;
  flex: 1;
  height: 80rpx;
  font-size: 28rpx;
  color: #808080;
  background: #fff;
  line-height: 80rpx; 
  text-align: center;
}

.cancel-btn {
  border-bottom-left-radius: 20rpx;
  border-right: 2rpx solid #e5e5e5;
  padding: 0
}

.confirm-btn {
  border-bottom-right-radius: 20rpx;
  border-left: 2rpx solid #e5e5e5;
  padding: 0
}

.modal-btn:active {
  opacity: 0.8;
}