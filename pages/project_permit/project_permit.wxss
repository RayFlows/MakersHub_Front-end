/* 整个页面黑底 */
.container {
  background-color: #222831;
  min-height: 100vh;
  padding: 30rpx;
  padding-bottom: 0;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

/* 表单容器 */
.form-container {
  background: #fff;
  border-radius: 32rpx;
  padding: 40rpx;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.1);
  width: 95%;
  margin-bottom: 30rpx;
}

.form-header {
  font-size: 36rpx;
  color: #00ADB5;
  font-weight: bold;
  text-align: center;
  margin-bottom: 40rpx;
}

/* 表单项通用样式 */
.form-item {
  margin-bottom: 40rpx;
}

.form-label {
  display: block;
  color: #00ADB5;
  font-size: 28rpx;
  margin-bottom: 20rpx;
  font-weight: bold;
  white-space: nowrap;
}

/* 输入框样式 */
.form-input {
  width: 100%;
  min-height: 80rpx;
  background: #F5F5F5;
  border: 2rpx solid #D8E0F0;
  border-radius: 24.5rpx;
  padding: 20rpx 20rpx;
  font-size: 28rpx;
  box-sizing: border-box;
  color:#7D8592;
}


/* 输入框统一灰色 */
.input,
.textarea,
.feedback {
  width: 100%;
  min-height: 80rpx;
  background: #F5F5F5;
  border: 2rpx solid #D8E0F0;
  border-radius: 24.5rpx;
  padding: 20rpx 20rpx;
  font-size: 28rpx;
  box-sizing: border-box;
  color:#7D8592;
}

.input {
  height: 72rpx;
  padding: 0 22rpx;
  line-height: 72rpx;
}

.textarea {
  padding: 14rpx 22rpx;
  min-height: 120rpx;
}

/* 审核反馈区 */
.feedback-section {
  width: 95%;
  margin-top: 24rpx;
  margin:0 auto;
}

.feedback {
  min-height: 140rpx;
}

/* 状态卡片 */
.status-card {
  width: 95%;
  border-radius: 40rpx;
  padding: 32rpx 40rpx;
  text-align: center;
  box-sizing: border-box;
  margin: 0 auto;
}

.status-card-reject {
  background-color: #ffd6e2;
  width:100%;
}

.status-card-pass {
  background-color: #d9ffff;
  width: 100%;
}

.status-title {
  font-size: 30rpx;
  font-weight: 700;
  margin-bottom: 16rpx;
}

.status-card-reject .status-title,
.status-card-reject .status-text {
  color: #ff4b7d;
}

.status-card-pass .status-title,
.status-card-pass .status-text {
  color: #00bcd4;
}

.status-text {
  font-size: 26rpx;
}

/* 按钮块：紧贴反馈 */
.btn-block {
  width: 100%;
  margin-top: 40rpx;
}

/* 按钮行 */
.btn-row {
  display: flex;
  justify-content: space-between;
  column-gap: 100rpx;
  padding: 0 50rpx;
  margin-bottom:30rpx;
}

.btn {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 90rpx;            /* ★ 按钮高度 */
  min-width: 10rpx;        /* ★ 按钮最小宽度 */
  padding: 0 16rpx;         /* ★ 按钮左右间距，影响按钮宽度 */

  background-color: #00B8A9;
  color: #fff;

  font-size: 28rpx;
  font-weight: 600;

  border-radius: 50rpx;     /* ★ 圆角 */
  box-sizing: border-box;

  white-space: nowrap;
}

.btn::after {
  border: none;
}

.btn-secondary {
  background-color: #ffffff;
  color: #333333;
}

.btn-primary {
  flex:2;
  background: #00ADB5;
  color: #fff;
  border-radius: 50rpx;
  margin: 10rpx auto;
  width: 70%;
  height: 90rpx;
  line-height: 60rpx;
  font-size: 32rpx;
}

.btn-primary:activate{
  transform: scale(0.98);
  filter:brightness(0.95);
}

.btn-reject {
  flex:2;
  border-radius: 50rpx;
  margin: 10rpx auto;
  width: 70%;
  height: 90rpx;
  line-height: 60rpx;
  font-size: 32rpx;
  background-color: #E33C64 !important;
  color: #ffffff !important;
}

.btn-pass {
  flex:2;
  background: #00ADB5;
  color: #fff;
  border-radius: 50rpx;
  margin: 10rpx auto;
  width: 30%;
  height: 90rpx;
  line-height: 60rpx;
  font-size: 32rpx;
}

/* 单按钮居中 */
.single-btn {
  justify-content: center;
}

.single-btn .btn {
  flex:2;
  background: #00ADB5;
  color: #fff;
  border-radius: 50rpx;
  margin: 10rpx auto;
  width: 30%;
  height: 90rpx;
  line-height: 60rpx;
  font-size: 32rpx;
  max-width: 30%;
}

/* scroll-view 内底部占位，避免按钮被猫挡住 */
.bottom-safe {
  width: 100%;
  height: 200rpx;  /* 可根据猫图高度微调 */
}

/* 猫图固定底部 */
.bottom-image {
  width: 440rpx;
  height: 174rpx;
  display: block;
  position: relative;
  bottom: 0;
  margin-top: 50rpx;
  z-index: 99;
}

/* 遮罩和弹窗 */
.mask {
  position: fixed;
  left: 0;
  top: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.4);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
}

.modal {
  width: 560rpx;
  background-color: #ffffff;
  border-radius: 24rpx;
  overflow: hidden;
}

.modal-title {
  text-align: center;
  padding: 24rpx 0 8rpx;
  font-size: 30rpx;
  color: #00bcd4;
  font-weight: 600;
}

.modal-body {
  padding: 24rpx 40rpx 32rpx;
  font-size: 26rpx;
  color: #333;
  text-align: center;
}

.modal-footer {
  display: flex;
  border-top: 1px solid #eeeeee;
}

.modal-btn {
  flex: 1;
  text-align: center;
  padding: 24rpx 0;
  font-size: 28rpx;
}

.modal-cancel {
  border-right: 1px solid #eeeeee;
  color: #999999;
}

.modal-confirm {
  color: #00bcd4;
}

/* toast */
.toast-mask {
  position: fixed;
  left: 0;
  right: 0;
  top: 0;
  bottom: 0;
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1200;
}

.toast-card,
.error-card {
  width: 320rpx;
  padding: 40rpx 0 32rpx;
  background: rgba(0, 0, 0, 0.85);
  border-radius: 20rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.error-card {
  background: #333333;
}

.icon-circle,
.error-icon-circle {
  width: 96rpx;
  height: 96rpx;
  border-radius: 50%;
  border: 4rpx solid #ffffff;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 20rpx;
}

.icon-check {
  width: 40rpx;
  height: 20rpx;
  border-left: 6rpx solid #ffffff;
  border-bottom: 6rpx solid #ffffff;
  transform: rotate(-45deg);
}

.error-icon-cross {
  width: 40rpx;
  height: 40rpx;
  position: relative;
}

.error-icon-cross::before,
.error-icon-cross::after {
  content: "";
  position: absolute;
  left: 50%;
  top: 50%;
  width: 4rpx;
  height: 40rpx;
  background-color: #ffffff;
  transform-origin: center;
}

.error-icon-cross::before {
  transform: translate(-50%, -50%) rotate(45deg);
}

.error-icon-cross::after {
  transform: translate(-50%, -50%) rotate(-45deg);
}

.toast-text {
  color: #ffffff;
  font-size: 26rpx;
}

/* 底部猫猫容器 */
.bottom-image-container {
  width: 100%;
  position: fixed;
  bottom: 0;
  z-index: 1;
  /* padding: 20rpx; */
  display: flex;
  justify-content: center; 
}

.bottom-image {
  width: 440rpx;
  height: 174rpx;
  /* 移除 position: absolute 和 bottom: 0 */
  /* 改为相对定位或静态定位 */
  margin: 0 auto; /* 水平居中 */
  display: block;
  padding-bottom: 0rpx; /* 底部留白 */
}

