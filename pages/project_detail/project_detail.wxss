/* 整体容器：顶部青色，下面白色内容 */
.page-container {
  padding: 0;
  position: relative;
  /* background: #00adb5;  */
  display: flex;
  flex-direction: column;
  min-height: 100vh;
  box-sizing: border-box;
}

/* 顶部青色区域：项目名称 + 编号 */
.header {
  /* 减小顶部高度，接近设计图 */
  padding: 32rpx 40rpx 28rpx 40rpx;
  background-color: #00adb5;
}

.header-row {
  position: relative;
  margin-bottom: 16rpx;
  display: flex;          /* 横向排列 */
  align-items: center;    /* 垂直居中 */
}

/* 顶部“项目名称”大标题 */
.project-name {
  font-size: 52rpx;
  font-weight: 600;
  color: #ffffff;
  line-height: 1.2;
  display: inline-block;
}

/* 顶部“编号：xxxx” */
.project-id {
  font-size: 28rpx;
  color: #ffffff;
  line-height: 1.6;
  display: inline-block;
  text-align: left;
}

/* 顶部复制图标（项目名称、编号） */
.copy-icon-header {
  width: 32rpx;
  height: 32rpx;
  margin-left: 20rpx;   /* 和文字之间留一点缝隙 */
  position: static;
}

/* 白色内容区域：紧接着青色区域，没有圆角 */
.detail-container {
  flex: 1;
  display: flex;
  flex-direction: column;
  position: relative;
  padding: 0rpx 40rpx 20rpx 40rpx; /* 底部多留空间给固定猫咪 */
  width: 100%;
  box-sizing: border-box;
  background: #ffffff;
  border-radius: 0;
  box-shadow: none;
}

/* 顶部提示文字 */
.tip-text {
  font-size: 24rpx;
  color: #888888;
  line-height: 1.6;
  margin-bottom: 24rpx;
}

/* 右上角状态标签：进行中 */
.box {
  position: absolute;
  top: 0rpx;
  right: 0rpx;
  width: 160rpx;
  height: 56rpx;
  border-radius: 0 0 0 30rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: #ffd66b; /* 默认黄色，实际颜色由 js 覆盖 */
  box-shadow: 0 4rpx 10rpx rgba(0, 0, 0, 0.1);
}

.boxtext {
  font-size: 28rpx;
  font-weight: 500;
  color: #333333;
  line-height: 5rpx;   /* 设置和黄色框高度一致，就完美垂直居中了 */
}


/* 通用区块 */
.section {
  position: relative;
  margin-bottom: 24rpx;
}

/* 列表/文本行 */
.info {
  padding: 12rpx 40rpx 0 24rpx;
  font-size: 28rpx;
  color: #444444;
  line-height: 1.8;
  position: relative;
}

/* 原生 switch 的统一缩放（目前没用到可以留着） */
.info switch {
  transform: scale(0.8);
  transform-origin: left center;
}

/* 带竖线的小标题 */
.sub-title {
  position: relative;
  padding-left: 20rpx;
  font-size: 32rpx;
  color: #222831;
  font-weight: 500;
  line-height: 1.4;
  border-left: 8rpx solid #00adb5;
  margin-bottom: 4rpx;
}

/* 项目简介多行文本 */
.intro-text {
  margin-top: 8rpx;
  line-height: 1.8;
}

/* 内容里的复制图标（联系方式） */
.copy-icon {
  width: 32rpx;
  height: 32rpx;
  position: absolute;
  right: 0;
  top: 50%;
  transform: translateY(-50%);
}

/* “项目成员”标题 + 按钮同一行 */
.section-header {
  display: flex;
  align-items: center;
}

/* 项目成员：添加/删除按钮区域 */
.member-actions {
  margin-top: 0;
  margin-left: 50rpx;
  display: flex;
  gap: 20rpx;
}

/* 小按钮通用样式 */
.action-btn {
  min-width: 140rpx;
  height: 60rpx;
  padding: 0 24rpx;
  font-size: 28rpx;
  font-weight: 400;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 30rpx;
  color: #ffffff;
  box-sizing: border-box;
}

/* 添加按钮（青色） */
.add-btn {
  background-color: #00adb5;
}

/* 删除按钮（粉色） */
.delete-btn {
  background-color: #e33c64;
}

/* 底部“结束项目”大按钮容器 */
.action-buttons {
  margin-top: 40rpx;
  display: flex;
  justify-content: center;
  padding: 0 40rpx;
}

/* 底部“结束项目”大按钮 */
.finish-btn {
  width: 210rpx;
  height: 88rpx;
  border-radius: 44rpx;
  background-color: #e33c64;
  color: #ffffff;
  font-size: 30rpx;
  font-weight: 500;
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 2;
}

/* 按钮按下效果 */
.action-btn:active {
  opacity: 0.8;
  transform: scale(0.97);
}

/* 底部猫咪图片：固定在页面底部不随内容滚动 */
.bottom-image {
  width: 440rpx;
  height: 174rpx;
  /* 移除 position: absolute 和 bottom: 0 */
  /* 改为相对定位或静态定位 */
  margin: 0 auto; /* 水平居中 */
  display: block;
  padding-bottom: 0rpx; /* 底部留白 */
  /* background-color: #00adb5; */
}

/* “项目招募情况”下面这一行：是否招募 + 是/否 + 开关 */
.recruit-row {
  padding: 12rpx 40rpx 0 24rpx;   /* 和 .info 行保持一致的内边距 */
  display: flex;
  align-items: center;            /* 垂直居中 */
  font-size: 28rpx;
  color: #444444;
}

/* 左边的“是否招募：” */
.recruit-label {
  flex: 0 0 auto;
}

/* 中间的“是 / 否”两个字 */
/* 青色小框本身 */
.recruit-status {
  flex: 0 0 auto;
  margin: 0 12rpx 0 8rpx;
  border-radius: 8rpx;
  padding: 4rpx 12rpx;        /* 控制框大小：想多高/多宽就改这里 */
}
/* 只控制框里的文字位置，不改变框的位置和大小 */
.recruit-status-text {
  font-size: 28rpx;
  color: #444444;
  line-height: 28rpx;
  position: relative;
  top: -18rpx;    /* 往上挪一点；想再高就 -6rpx / -8rpx */
}

/* 自定义开关外壳 */
.recruit-switch {
  flex: 0 0 auto;
  width: 88rpx;                   /* 开关宽度 */
  height: 40rpx;                  /* 开关高度（比原生矮一点） */
  border-radius: 40rpx;           /* 椭圆 pill */
  background-color: #dcdcdc;      /* 关闭时灰色 */
  position: relative;
  padding: 4rpx;
  box-sizing: border-box;
  transition: background-color 0.2s;
}

/* 白色小圆球 */
.recruit-switch__circle {
  width: 32rpx;
  height: 32rpx;
  border-radius: 50%;
  background-color: #ffffff;
  position: absolute;
  top: 4rpx;
  left: 4rpx;
  transition: transform 0.2s;
}

/* 开启状态：背景变青色 */
.recruit-switch--on {
  background-color: #00adb5;
}

/* 开启状态：小球滑到右边，贴着右侧内边距 */
.recruit-switch--on .recruit-switch__circle {
  transform: translateX(48rpx);
}

/* 关闭状态：小球在左边 */
.recruit-switch--off .recruit-switch__circle {
  transform: translateX(0);
}
.modal-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.6);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 9999;
}

/* 弹窗内容 */
.modal-content {
  width: 600rpx;
  background: #fff;
  border-radius: 20rpx;
  padding-top: 30rpx;
  position: relative;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: flex-start;
}

.modal-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #00adb5;
  text-align: center;
  display: block;
  margin-bottom: 30rpx;
}

/* 搜索容器 */
.search-container {
  position: relative;
  flex-direction: row;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 0rpx 30rpx 0rpx 30rpx;
  border: 2rpx solid #e5e5e5;
  border-left: none;
  border-right: none;
  width: 90%;
}

.search-input {
  width: 100%;
  height: 80rpx;
  padding: 0 80rpx 0 30rpx;
  font-size: 28rpx;
  box-sizing: border-box;
}

.find-icon {
  width: 42rpx;
  height: 42rpx;
}

.delete-icon {
  width: 32rpx;
  height: 32rpx;
}

/* 下拉列表 */
.dropdown-results {
  position: absolute;
  top: 180rpx;
  left: 5%;
  max-height: 400rpx;
  background: #fff;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.15);
  overflow-y: auto;
  z-index: 1;
  width: 90%;
}

.dropdown-item {
  padding: 25rpx 30rpx;
  border-bottom: 1rpx solid #f0f0f0;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.dropdown-item text {
  color: #808080;
  font-size: 28rpx;
}
.dropdown-item:last-child {
  border-bottom: none;
}

.dropdown-item.active {
  background: #e8f4f8;
}

/* 已选择成员显示 */
.selected-member {
  background: #e8f4f8;
  border-radius: 20rpx;
  padding: 25rpx 30rpx;
  margin-top: 30rpx;
  width: 90%;
  display: flex;
  align-items: center;
  gap: 15rpx;
}

.selected-label {
  font-size: 26rpx;
  color: #00adb5;
  font-weight: 700;
}

.selected-name {
  font-size: 28rpx;
  font-weight: 700;
  color: #222831;
  flex: 1;
}

/* 按钮组 */
.modal-buttons {
  display: flex;
  flex-direction: row;
  justify-content: start;
  align-items: center;
  margin-top: 30rpx;
  border-top: 2rpx solid #e5e5e5;
  width: 100%;
}

.modal-btn {
  flex: 1;
  height: 80rpx;
  font-size: 28rpx;
  color: #808080;
  background: #fff;
  line-height: 80rpx;
  text-align: center;
}

.cancel-btn {
  border-bottom-left-radius: 20rpx;
  border-right: 2rpx solid #e5e5e5;
  padding: 0;
}

.confirm-btn {
  border-bottom-right-radius: 20rpx;
  border-left: 2rpx solid #e5e5e5;
  padding: 0;
}

.modal-btn:active {
  opacity: 0.8;
}
